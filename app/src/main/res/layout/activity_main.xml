<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="44dp"
            android:layout_marginTop="80dp"
            android:orientation="vertical"
            >
            <EditText
                android:id="@+id/editTextCardNumber"
                android:layout_width="270dp"
                android:layout_height="54dp"
                android:ems="10"
                android:inputType="number"
                android:hint="Card Number"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edit_text_bacground"

                />
            <TextView
                android:id="@+id/cardNumberText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="invalid card number"
                android:textColor="#ff0000"
                android:visibility="invisible"
                android:paddingHorizontal="10dp"
                ></TextView>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="15dp"

            android:layout_marginHorizontal="44dp"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/editTextTextExpireDate"
                    android:layout_width="130dp"
                    android:layout_height="54dp"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="MM/YY"
                    android:paddingLeft="10dp"
                    android:layout_marginRight="12dp"
                    android:background="@drawable/edit_text_bacground"
                    />
                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="invalid Date"
                    android:textColor="#ff0000"
                    android:visibility="invisible"
                    android:paddingHorizontal="10dp"
                    ></TextView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/editTextTextCVVNumber"
                    android:layout_width="130dp"
                    android:layout_height="54dp"
                    android:ems="10"
                    android:inputType="number"
                    android:hint="CVV"

                    android:paddingHorizontal="10dp"
                    android:background="@drawable/edit_text_bacground"

                    android:layout_marginEnd="0dp"

                    />
                <TextView
                    android:id="@+id/cvvText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="invalid CVV"
                    android:textColor="#ff0000"
                    android:visibility="invisible"
                    android:paddingHorizontal="10dp"
                    ></TextView>
            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:layout_marginHorizontal="44dp"

            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <EditText
                    android:id="@+id/editTextTextFirstName"
                    android:layout_width="130dp"
                    android:layout_height="54dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="First Name"
                    android:paddingHorizontal="10dp"
                    android:background="@drawable/edit_text_bacground"
                    />
                <TextView
                    android:id="@+id/nameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="invalid name"
                    android:textColor="#ff0000"
                    android:visibility="invisible"

                    android:paddingHorizontal="10dp"
                    ></TextView>
            </LinearLayout>
            <EditText
                android:id="@+id/editTextTextLastName"
                android:layout_width="130dp"
                android:layout_height="54dp"
                android:ems="10"

                android:inputType="textPersonName"
                android:hint="Last Name"
                android:layout_marginLeft="12dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/edit_text_bacground"
                 />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="44dp"
                android:layout_marginEnd="44dp"
                android:id="@+id/submitButton"


                android:layout_marginBottom="44dp"
                android:paddingHorizontal="50dp"
                android:paddingVertical="10dp"
                android:text="Submit" />
        </RelativeLayout>






    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>